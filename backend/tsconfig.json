{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },

  "include": [
    "src/**/*.ts", "src/types/**/*.d.ts"
  ]
}